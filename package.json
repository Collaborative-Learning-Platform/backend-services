    "build:user-ms": "nest build user-ms",
    "build:auth-ms": "nest build auth-ms",
    "build:notification-ms": "nest build notification-ms",
    "build:workspace-ms": "nest build workspace-ms",
    "build:chat-ms": "nest build chat-ms",
