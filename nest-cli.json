        "tsConfigPath": "apps/storage-ms/tsconfig.app.json"
      }
    },
    "user-ms": {
      "type": "application",
      "root": "apps/user-ms",
      "entryFile": "main",
      "sourceRoot": "apps/user-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-ms/tsconfig.app.json"
      }
    },
    "workspace-ms": {
      "type": "application",
      "root": "apps/workspace-ms",
