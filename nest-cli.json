{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend-services/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/backend-services/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend-services",
  "projects": {
    "ai-ms": {
      "type": "application",
      "root": "apps/ai-ms",
      "entryFile": "main",
      "sourceRoot": "apps/ai-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ai-ms/tsconfig.app.json"
      }
    },
    "analytics-ms": {
      "type": "application",
      "root": "apps/analytics-ms",
      "entryFile": "main",
      "sourceRoot": "apps/analytics-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/analytics-ms/tsconfig.app.json"
      }
    },
    "auth-ms": {
      "type": "application",
      "root": "apps/auth-ms",
      "entryFile": "main",
      "sourceRoot": "apps/auth-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-ms/tsconfig.app.json"
      }
    },
    "chat-ms": {
      "type": "application",
      "root": "apps/chat-ms",
      "entryFile": "main",
      "sourceRoot": "apps/chat-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat-ms/tsconfig.app.json"
      }
    },
    "document-ms": {
      "type": "application",
      "root": "apps/document-ms",
      "entryFile": "main",
      "sourceRoot": "apps/document-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/document-ms/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "notification-ms": {
      "type": "application",
      "root": "apps/notification-ms",
      "entryFile": "main",
      "sourceRoot": "apps/notification-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-ms/tsconfig.app.json",
        "assets": [
          {
            "include": "src/templates/**/*",
            "outDir": "dist/apps/notification-ms/templates"
          }
        ],
        "watchAssets": true
      }
